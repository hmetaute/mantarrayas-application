#!/bin/sh

psql -h localhost -U postgres -p 5432 << EOF
CREATE DATABASE ix_job_builder_jobs;
CREATE USER ix_job_builder_user WITH PASSWORD 'ixtreme';
GRANT ALL PRIVILEGES ON DATABASE "ix_job_builder_jobs" to ix_job_builder_user; \
GRANT ALL ON SCHEMA public TO ix_job_builder_user; \
GRANT ALL ON ALL TABLES IN SCHEMA public TO ix_job_builder_user;
EOF
